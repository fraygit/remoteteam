
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="view-header">
            <div class="pull-right text-right" style="line-height: 14px">
                <small>Luna Admin Theme<br>Dashboard<br> <span class="c-white">v.1.3</span></small>
            </div>
            <div class="header-icon">
                <i class="pe page-header-icon pe-7s-shield"></i>
            </div>
            <div class="header-title">
                <h3 class="m-b-xs">Remote Team</h3>
                <small>
                    Special minimal admin theme with Dark UI style for monitoring or administration web applications.
                </small>
                <button id="sendmessage" class="btn btn-primary">Send</button>
            </div>
        </div>
        <hr>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            var clientMessenger = $.connection.messageHub;
            clientMessenger.client.addNewMessageToPage = function (clientId, message) {
                console.log("Message received: " + message);
            };
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub. 
                    clientMessenger.server.send("123", "sdfds");
                    // Clear text box and reset focus for next comment. 
                    
                });
            });

        });
    </script>
}

